function bubbleSort(columnIndex) {
        const table = document.getElementById("myTable");
        const rows = Array.from(table.rows).slice(1); // Get all rows excluding the header
        let swapped;

        // Bubble sort on selected column
        do {
            swapped = false;
            for (let i = 0; i < rows.length - 1; i++) {
                const rowA = rows[i];
                const rowB = rows[i + 1];
                const cellA = rowA.cells[columnIndex].innerText;
                const cellB = rowB.cells[columnIndex].innerText;

                // Compare the values based on the selected column
                if (isNaN(cellA) || isNaN(cellB)) {
                    // If values are not numbers, compare as strings
                    if (cellA > cellB) {
                        // Swap rows if out of order
                        table.tBodies[0].insertBefore(rowB, rowA);
                        swapped = true;
                    }
                } else {
                    // If values are numbers, compare as numbers
                    if (parseFloat(cellA) > parseFloat(cellB)) {
                        // Swap rows if out of order
                        table.tBodies[0].insertBefore(rowB, rowA);
                        swapped = true;
                    }
                }
            }
        } while (swapped); // Repeat until no more swaps are needed
    }
